<Window x:Class="_006_Language.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_006_Language"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300" >
  <StackPanel Margin="20" >
    <TextBlock HorizontalAlignment="Center">■ 좋아하는 프로그래밍 언어는?</TextBlock>
    <Separator Background="LightSteelBlue" Margin="0 5 0 0 "/>
    <CheckBox x:Name="cbC" Margin="30 5 0 0">C</CheckBox>
    <CheckBox x:Name="cbCPP" Margin="30 5 0 0">C++</CheckBox>
    <CheckBox x:Name="cbCS" Margin="30 5 0 0">C#</CheckBox>
    <CheckBox x:Name="cbPy" Margin="30 5 0 0">Python</CheckBox>
    <CheckBox x:Name="cbJava" Margin="30 5 0 0">Java</CheckBox>
    <Separator Background="LightSteelBlue" Margin="0 5 0 0 "/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button x:Name="btnSubmit" Margin="10 10 5 0" 
              Padding="5" Width="70" 
              Click="btnSubmit_Click">투표하기</Button>
      <Button x:Name="btnExit" Margin="10 10 5 0" 
              Padding="5" Width="70" 
              Click="btnExit_Click">끝내기</Button>
    </StackPanel>
  </StackPanel>
</Window>
